{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "MQL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#selectors"
		},
		{
			"include": "#busID"
		},
		{
			"include": "#operators"
		},
		{
            "include": "#comments"
        },
		{
			"include": "#types"
		},
		{
			"include": "#strings-double"
		},
		{
			"include": "#strings-single"
		}
	],
	"repository": {
		"types": {
			"patterns": [
				{
					"name": "entity.name.class.mql",
					"match": "\\b(attribute|name|type|originator|id|description|originated)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mql",
					"match": "\\b(from|to|rel|fromrel|select|where)\\b"
				}
			]
		},
		"comments": {
            "name": "comment.line.mql",
            "begin": "#",
            "end": "\n",
            "captures": {
                "1": {
                    "name": "punctuation.definition.comment.mql"
                }
            }
        },
		"selectors": {
			"patterns": [
				{
					"name": "support.function.mql",
					"match": "\\b(select|where|filter)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.new.mql",
					"match": "(print|add|temp|query|connection|connect|dump|limit|bus|[+]|[-]|!=|==)"
				}
			]
		},
		"strings-double": {
			"name": "string.quoted.double.mql",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mql",
					"match": "\\\\."
				}
			]
		},
		"strings-single": {
			"name": "string.quoted.single.mql",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.mql",
					"match": "\\\\."
				}
			]
		},
		"busID": {
			"patterns": [
				{
					"name": "constant.numeric.mql",
					"match": "\\b([0-9]*[0-9][.][0-9]*[0-9][.][0-9]*[0-9][.][0-9]*[0-9])\\b"
				}
			]
		}
	},
	"scopeName": "source.mql"
}