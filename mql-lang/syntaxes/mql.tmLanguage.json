{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "MQL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#busID"
		},
		{
			"include": "#operators"
		},
		{
            "include": "#comments"
		},
		{
            "include": "#variables"
        },
		{
			"include": "#types"
		},
		{
			"include": "#strings-single"
		}
	],
	"repository": {
		"types": {
			"patterns": [
				{
					"name": "entity.name.class.mql",
					"match": "\\b(attribute|format|name|input|type|originator|id|description|originated|current|owner|modified|fromtype|totype|locked|on|off|history)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mql",
					"match": "\\b(from|to|rel|fromrel)\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "constant.regexp.mql",
					"match": "\\b(bus|context|connection|relationship|policy|action|prog|trigger)\\b"
				}
			]
		},
		"comments": {
            "name": "comment.line.mql",
            "begin": "#",
            "end": "\n",
            "captures": {
                "1": {
                    "name": "punctuation.definition.comment.mql"
                }
            }
        },
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.new.mql",
					"match": "\\b(select|where|filter|print|add|temp|query|dump|limit|AND|OR|~~|set|push|pop|modify|user|pass|exec|mod|create|connect|delete|promote|demote)\\b"
				}
			]
		},
		"strings-single": {
			"name": "string.quoted.single.mql",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.mql",
					"match": "\\\\."
				}
			]
		},
		"busID": {
			"patterns": [
				{
					"name": "constant.numeric.mql",
					"match": "\\b([0-9]*[0-9][.][0-9]*[0-9][.][0-9]*[0-9][.][0-9]*[0-9])\\b"
				}
			]
		}
	},
	"scopeName": "source.mql"
}